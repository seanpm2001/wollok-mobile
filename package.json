{
	"name": "wollokmobile",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"android": "react-native run-android",
		"ios": "cd ios/ && pod install && cd ../ && react-native run-ios",
		"start": "react-native start",
		"bundle:android": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
		"publish-release:android": "yarn bundle:android && cd android && ./gradlew clean && ./gradlew assembleRelease -x bundleReleaseJsAndAssets",
		"publish-debug:android": "yarn bundle:android && cd android  && ./gradlew clean && ./gradlew assembleDebug -x bundleReleaseJsAndAssets",
		"test": "jest",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"debug": "react-devtools",
		"prepare": "husky install"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"prettier --write",
			"eslint --fix",
			"git add"
		]
	},
	"dependencies": {
		"@react-navigation/native": "^5.9.4",
		"@react-navigation/stack": "^5.14.5",
		"change-case": "^4.1.2",
		"deepmerge": "^4.2.2",
		"eslint-plugin-prettier": "^4.0.0",
		"i18n-js": "^3.8.0",
		"lodash.memoize": "^4.1.2",
		"react": "17.0.1",
		"react-native": "0.64.0",
		"react-native-bootsplash": "^3.2.3",
		"react-native-gesture-handler": "^1.10.3",
		"react-native-localize": "^2.1.0",
		"react-native-paper": "^4.8.1",
		"react-native-safe-area-context": "^3.2.0",
		"react-native-screens": "^3.2.0",
		"react-native-vector-icons": "^8.1.0",
		"upper-case-first": "^2.0.2",
		"wollok-ts": "^3.0.6"
	},
	"devDependencies": {
		"@babel/core": "^7.12.9",
		"@babel/runtime": "^7.12.5",
		"@bam.tech/react-native-make": "^3.0.3",
		"@react-native-community/eslint-config": "^2.0.0",
		"@types/i18n-js": "^3.8.1",
		"@types/jest": "^26.0.20",
		"@types/lodash.memoize": "^4.1.6",
		"@types/react-native": "^0.64.0",
		"@types/react-test-renderer": "^16.9.2",
		"babel-jest": "^26.6.3",
		"eslint": "^7.14.0",
		"husky": "^7.0.2",
		"jest": "^26.6.3",
		"lint-staged": "^11.1.2",
		"metro-react-native-babel-preset": "^0.64.0",
		"prettier": "^2.4.1",
		"react-devtools": "^4.21.0",
		"react-test-renderer": "17.0.1",
		"typescript": "^3.8.3"
	},
	"resolutions": {
		"@types/react": "^17"
	},
	"jest": {
		"preset": "react-native",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	}
}
